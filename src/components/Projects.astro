---
import LinkButton from "./LinkButton.astro";
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import VercelIcon from "./icons/VercelIcon.astro";
import FramerIcon from "./icons/FramerIcon.astro";
import JavascriptIcon from "./icons/JavascriptIcon.astro";
import TypescriptIcon from "./icons/TypescriptIcon.astro";
import ExpoIcon from "./icons/ExpoIcon.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#003159] text-white",
    icon: AstroIcon,
  },
  VERCEL: {
    name: "Vercel",
    class: "bg-[#003159] text-white",
    icon: VercelIcon,
  },
  REACT: {
    name: "React Js",
    class: "bg-[#003159] text-white",
    icon: ReactIcon,
  },
  REACT_NATIVE: {
    name: "React Native",
    class: "bg-[#003159] text-white",
    icon: ReactIcon,
  },
  FRAMER: {
    name: "Framer Motion",
    class: "bg-[#003159] text-white",
    icon: FramerIcon,
  },
  JAVASCRIPT: {
    name: "Vanilla Javascript",
    class: "bg-[#003159] text-white",
    icon: JavascriptIcon,
  },
  TYPESCRIPT: {
    name: "Typescript",
    class: "bg-[#003159] text-white",
    icon: TypescriptIcon,
  },
  EXPO: {
    name: "Expo.dev",
    class: "bg-[#003159] text-white",
    icon: ExpoIcon,
  },
};
const PROJECTS = [
  {
    title: "Savvly Mobile App - React Native + TypeScript FinTech app",
    description:
      "Demonstrating my expertise in Mobile development with React Native and TypeScript, I developed a comprehensive financial saving app for a startup. The application features modules for contract creation, payout estimation, simulations, FAQ integration, and secure Stripe payments. Leveraging MobX for global state management and Sentry for error tracking, I showcased strong programming skills in delivering a robust solution for the startup's needs",
    link: "https://savvly.com",
    image: "/projects/savvly.webp",
    tags: [TAGS.REACT_NATIVE, TAGS.TYPESCRIPT, TAGS.TAILWIND],
  },
  {
    title: "Astro Blog - A blog of the tech list I use",
    description:
      "A simple website made possible by the software and tools I use, which I have compiled on this web.",
    link: "https://mgeovany-blog.vercel.app/",
    github: "https://github.com/MGeovany/mgeovany-blog",
    image: "/projects/blog.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
  {
    title:
      "Food Recipe App - Expo project created for IOS and ANDROID devices.",
    description:
      "Food recipe app with search, favorites, and personalized recommendations for easy meal planning. üçù",

    github: "https://github.com/MGeovany/food-recipe-app",
    image: "/projects/food.webp",
    tags: [TAGS.EXPO],
  },
  {
    title: "BiDeskU - Professional graphic design service",
    description:
      "Bidesku is a comprehensive web platform designed to streamline the management of contracts, funds, FAQs, and dashboard functionalities. Built from scratch with Bulma Css, Chart js.",
    link: "https://bidesku.vercel.app/",
    github: "https://github.com/MGeovany/bidesku-v2",
    image: "/projects/bidesku.webp",
    tags: [TAGS.REACT, TAGS.VERCEL, TAGS.FRAMER],
  },
  {
    title: "Simple ToDo App - Project made easy. Achieve more with Javascript.",
    description:
      "Effortlessly manage tasks with our intuitive ToDo app. Stay organized, set priorities, and boost productivity with ease.",
    link: "https://codepen.io/MGeovany/full/LYdxLmw",
    image: "/projects/todo.webp",
    tags: [TAGS.JAVASCRIPT],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-blue-800 dark:text-blue-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver c√≥digo fuente
            </LinkButton>
          )}

          {link && (
            <LinkButton href={link}>
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <>
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                  <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                  <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                  <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                  <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                  <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                  <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
                </>
              </svg>
              Ir al sitio web
            </LinkButton>
          )}
        </footer>
      </article>
    ))
  }
</section>
